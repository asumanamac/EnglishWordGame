<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gamebackground"
    tools:context="example.seniordesign_project.PlayScreen">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/heart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/heart"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_toStartOf="@+id/imageView6"
        android:layout_marginEnd="8dp"
        android:id="@+id/imageView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/heart"
        android:id="@+id/imageView9"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toStartOf="@+id/imageView8"
        android:layout_marginEnd="8dp" />

    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="90dp"
        android:id="@+id/volumeon"
        android:onClick="clickVoice"
        android:src="@drawable/volumeon2"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:elevation="6dp">
    </android.support.design.widget.FloatingActionButton>


    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="170dp"
        android:src="@drawable/out"
        android:onClick="clickOut"
        android:visibility="invisible"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:id="@+id/out"
        android:elevation="6dp">
    </android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/floatmain"
        android:layout_marginLeft="50dp"
        android:src="@drawable/setting3"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        app:pressedTranslationZ="12dp"
        android:layout_marginStart="11dp">
    </android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="250dp"
        android:src="@drawable/questionmark"
        android:visibility="invisible"
        android:onClick="clickHome"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:id="@+id/home"
        android:elevation="6dp">
    </android.support.design.widget.FloatingActionButton>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/timer"
        android:id="@+id/timer"
        android:layout_below="@+id/score"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/score2"
        android:id="@+id/score"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellowbar2"
        android:id="@+id/imageView18"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/image1"
        android:layout_alignStart="@+id/image1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellowbar2"
        android:id="@+id/imageView19"
        android:layout_alignTop="@+id/imageView18"
        android:layout_alignStart="@+id/image2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/imageboard4"
        android:layout_marginTop="8dp"
        android:id="@+id/image3"
        android:layout_below="@+id/imageView18"
        android:layout_alignEnd="@+id/imageView18" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellowbar2"
        android:layout_marginTop="9dp"
        android:id="@+id/imageView22"
        android:layout_below="@+id/image3"
        android:layout_alignStart="@+id/image3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellowbar2"
        android:id="@+id/imageView23"
        android:layout_alignTop="@+id/imageView22"
        android:layout_alignStart="@+id/image4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/match_word1"
        android:layout_marginTop="183dp"
        android:layout_marginStart="55dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/match_word2"
        android:layout_marginTop="183dp"
        android:layout_marginStart="210dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="322dp"
        android:layout_marginStart="55dp"
        android:id="@+id/match_word3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/match_word4"
        android:layout_marginStart="210dp"
        android:layout_marginTop="320dp" />



    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_text"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/score"
        android:layout_toEndOf="@+id/timer" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_text"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/timer_text" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/imageboard4"
        android:id="@+id/image2"
        android:layout_above="@+id/imageView18"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/imageboard4"
        android:id="@+id/image4"
        android:layout_above="@+id/imageView22"
        android:layout_alignStart="@+id/imageView19" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/imageboard4"
        android:id="@+id/image1"
        android:layout_below="@+id/timer"
        android:layout_alignStart="@+id/floatmain" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/wordboard9"
        android:id="@+id/imageView39"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="345dp"

         />

    <TextView
        android:id="@+id/word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="50dp"
        android:layout_marginTop="380dp" />

    <TextView
        android:id="@+id/word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="212dp"
        android:layout_marginTop="380dp" />

    <TextView
        android:id="@+id/word3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="50dp"
        android:layout_marginTop="430dp" />

    <TextView
        android:id="@+id/word4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="430dp"
        android:text="TextView" />


</RelativeLayout>
