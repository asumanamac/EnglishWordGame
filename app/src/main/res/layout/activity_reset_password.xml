<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#ffffff">

        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient"
            android:paddingTop="0dip"
            android:paddingBottom="0dp">
            <!-- Logo Start-->
            <ImageView android:src="@drawable/engg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"/>

            <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->
        <!-- Footer Start -->
        <LinearLayout android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:background="@layout/footer_repeated"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

        </LinearLayout>
        <!-- Footer Ends -->

        <!-- Login Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@id/header"
            android:id="@+id/linearLayout">


            <TextView
                android:text="Please enter your email for new password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:textColor="#372c24"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="Email"
                android:drawableRight="@drawable/ic_email"
                android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_marginTop="20dp"
                android:id="@+id/email_input" />

            <Button
                android:text="SEND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:id="@+id/send_button"
                android:layout_below="@+id/email_input"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_button"
                android:layout_alignStart="@+id/email_input"
                android:layout_marginStart="19dp"
                android:layout_marginTop="26dp"
                android:textSize="20sp"
                android:textColor="#372c24"
                android:id="@+id/timer" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Password"
                android:drawableRight="@drawable/ic_key"
                android:id="@+id/password_input"
                android:layout_below="@+id/timer"
                android:layout_alignStart="@+id/email_input"
                android:layout_marginTop="19dp" />

            <Button
                android:text="RESET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:id="@+id/reset_button"
                android:layout_below="@+id/password_input"
                android:layout_alignParentStart="true" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>


