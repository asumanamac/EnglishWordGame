<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_over"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.seniordesign_project.GameOverActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/largeblueboard3"
        android:id="@+id/imageView15"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/game_over"
        android:layout_marginTop="34dp"
        android:id="@+id/imageView24"
        android:layout_alignTop="@+id/imageView15"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TOTAL SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView24"
        android:layout_alignStart="@+id/imageView15"
        android:layout_marginStart="40dp"
        android:layout_marginTop="21dp"
        android:id="@+id/total_score_text" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/total_score_text"
        android:layout_alignEnd="@+id/imageView15"
        android:layout_marginEnd="80dp"
        android:id="@+id/total_score_result" />

    <TextView
        android:text="LEVEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_score_text"
        android:layout_alignStart="@+id/total_score_text"
        android:layout_marginTop="20dp"
        android:id="@+id/level_text" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_text"
        android:layout_alignStart="@+id/total_score_result"
        android:id="@+id/level_result" />

    <TextView
        android:text="HIGH SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_text"
        android:layout_alignStart="@+id/level_text"
        android:layout_marginTop="25dp"
        android:id="@+id/high_score_text" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cancelbutton"
        android:background="@null"
        android:id="@+id/cancel_button"
        android:layout_alignTop="@+id/play_button"
        android:layout_alignEnd="@+id/imageView15"
        android:layout_marginEnd="37dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/playbutton"
        android:background="@null"
        android:id="@+id/play_button"
        android:layout_below="@+id/high_score_text"
        android:layout_alignStart="@+id/high_score_text"
        android:layout_marginTop="24dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/high_score_result"
        android:layout_alignBottom="@+id/high_score_text"
        android:layout_alignEnd="@+id/imageView15"
        android:layout_marginEnd="86dp"
        android:layout_alignTop="@+id/high_score_text" />


</RelativeLayout>
