<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/largeblueboard3"
        android:id="@+id/imageView10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/level_1_pink"
        android:layout_alignTop="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:id="@+id/level_image" />

    <TextView
        android:text="TARGET SCORE :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_image"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginStart="46dp"
        android:layout_marginTop="55dp"
        android:id="@+id/score_level_text" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/score_level_text"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_marginEnd="52dp"
        android:id="@+id/score_level_result" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cancelbutton"
        android:background="@null"
        android:id="@+id/cancel_level_button"
        android:layout_alignTop="@+id/play_level_button"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_marginEnd="39dp" />

    <TextView
        android:text="LEVEL :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_text"
        android:layout_below="@+id/score_level_text"
        android:layout_alignStart="@+id/score_level_text"
        android:layout_marginTop="17dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/playbutton"
        android:background="@null"
        android:id="@+id/play_level_button"
        android:layout_marginBottom="33dp"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignStart="@+id/score_level_text" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_result_text"
        android:layout_alignBaseline="@+id/level_text"
        android:layout_alignBottom="@+id/level_text"
        android:layout_alignStart="@+id/score_level_result" />
</RelativeLayout>
