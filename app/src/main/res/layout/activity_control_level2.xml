<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_control_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gamebackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timer"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView25"
        android:layout_marginTop="7dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/score2"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timer"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView25"
        android:layout_marginTop="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/heart1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:layout_alignBottom="@+id/heart1"
        android:layout_toStartOf="@+id/heart1"
        android:layout_marginEnd="8dp"
        android:id="@+id/heart2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:id="@+id/heart3"
        android:layout_alignTop="@+id/heart2"
        android:layout_toStartOf="@+id/heart2"
        android:layout_marginEnd="8dp" />


    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="90dp"
        android:id="@+id/volumeon"
        android:onClick="clickVoice"
        android:src="@drawable/volumeon2"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:elevation="6dp">
    </android.support.design.widget.FloatingActionButton>


    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="170dp"
        android:onClick="clickOut"
        android:visibility="invisible"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:id="@+id/out"
        android:elevation="6dp"
        android:src="@drawable/home">
    </android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/floatmain"
        android:layout_marginLeft="50dp"
        android:src="@drawable/setting3"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        app:pressedTranslationZ="12dp"
        android:layout_marginStart="11dp">
    </android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="250dp"
        android:src="@drawable/questionmark"
        android:visibility="invisible"
        android:onClick="clickHome"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:id="@+id/home"
        android:elevation="6dp">
    </android.support.design.widget.FloatingActionButton>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/heart3"
        android:layout_toEndOf="@+id/imageView7"
        android:layout_marginStart="16dp"
        android:id="@+id/score_text" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_text"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/score_text"
        android:layout_marginTop="9dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/yellowbar"
            android:layout_above="@+id/image3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="58dp"
            android:id="@+id/yellow_bar" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/yellow_bar"
            android:layout_centerHorizontal="true"
            android:id="@+id/word_text2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imageboard4"
            android:id="@+id/image3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imageboard4"
            android:id="@+id/image4"
            android:layout_below="@+id/yellow_bar"
            android:layout_alignStart="@+id/image3"
            android:layout_marginTop="115dp" />


    </RelativeLayout>






</RelativeLayout>
