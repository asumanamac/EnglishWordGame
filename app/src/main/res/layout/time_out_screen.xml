<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/largeblueboard3"
        android:id="@+id/imageView32"
        android:layout_marginBottom="121dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/timeisup2"
        android:layout_alignTop="@+id/imageView32"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/imageView33" />

    <TextView
        android:text="SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView33"
        android:layout_alignStart="@+id/imageView32"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:id="@+id/score_text" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/score_text"
        android:layout_alignEnd="@+id/imageView32"
        android:layout_marginEnd="67dp"
        android:id="@+id/score_result_text" />

    <TextView
        android:text="STATUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_text"
        android:layout_alignStart="@+id/score_text"
        android:layout_marginTop="32dp"
        android:id="@+id/status_text" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/status_text"
        android:layout_alignStart="@+id/score_result_text"
        android:id="@+id/status_result_text" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cont"
        android:background="@null"
        android:layout_marginBottom="32dp"
        android:id="@+id/cont_button"
        android:layout_alignBottom="@+id/imageView32"
        android:layout_alignStart="@+id/status_text" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cancelbutton"
        android:background="@null"
        android:id="@+id/cancel_button"
        android:layout_marginStart="36dp"
        android:layout_alignTop="@+id/cont_button"
        android:layout_toEndOf="@+id/cont_button" />

</RelativeLayout>