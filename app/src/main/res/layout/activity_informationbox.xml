<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/largeblueboard3"
        android:id="@+id/imageView29"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/help_header3"
        android:layout_marginTop="37dp"
        android:id="@+id/imageView31"
        android:layout_alignTop="@+id/imageView29"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/information_box"
        android:layout_width="295dp"
        android:layout_height="130dp"
        android:lines="3"
        android:gravity="center"
        android:id="@+id/help_text"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageView31"
        android:layout_alignEnd="@+id/imageView29"
        android:layout_marginEnd="12dp" />
</RelativeLayout>