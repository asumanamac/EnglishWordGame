<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gamebackground"
    tools:context="example.seniordesign_project.SecondLevelActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timer"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView25"
        android:layout_marginTop="7dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/score2"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timer"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView25"
        android:layout_marginTop="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/heart1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:layout_alignBottom="@+id/heart1"
        android:layout_toStartOf="@+id/heart1"
        android:layout_marginEnd="8dp"
        android:id="@+id/heart2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:id="@+id/heart3"
        android:layout_alignTop="@+id/heart2"
        android:layout_toStartOf="@+id/heart2"
        android:layout_marginEnd="8dp" />


    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="90dp"
        android:id="@+id/volumeon"
        android:onClick="clickVoice"
        android:src="@drawable/volumeon2"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:elevation="6dp">
    </android.support.design.widget.FloatingActionButton>


    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="170dp"
        android:onClick="clickOut"
        android:visibility="invisible"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:id="@+id/out"
        android:elevation="6dp"
        android:src="@drawable/home">
    </android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/floatmain"
        android:layout_marginLeft="50dp"
        android:src="@drawable/setting3"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        app:pressedTranslationZ="12dp"
        android:layout_marginStart="11dp">
    </android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="250dp"
        android:src="@drawable/questionmark"
        android:visibility="invisible"
        android:onClick="clickHome"
        app:backgroundTint="#A901DB"
        android:layout_alignParentBottom="true"
        android:id="@+id/home"
        android:elevation="6dp">
    </android.support.design.widget.FloatingActionButton>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yellowbar2"
        android:id="@+id/imageView17"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="98dp"

        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wordboard14"
        android:id="@+id/imageView26"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="0dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow_right"
        android:id="@+id/righarrow_button"
        android:background="#A901DB"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/heart3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="113dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_text"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="113dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/imageboard5"
        android:id="@+id/random_image"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="106dp"/>


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="335dp"
            android:layout_marginStart="50dp"
            android:id="@+id/text_word1" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="335dp"
            android:layout_marginStart="200dp"
            android:id="@+id/text_word2" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="375dp"
            android:id="@+id/text_word3" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="375dp"
            android:id="@+id/text_word4" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="420dp"
            android:id="@+id/text_word5" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="420dp"
            android:id="@+id/text_word6" />
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="131dp"
            android:id="@+id/text_name1" />




</RelativeLayout>
