<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_success_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.seniordesign_project.SuccessScreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/largeblueboard3"
        android:id="@+id/imageView15"
        android:foregroundGravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="ccccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/correct_text"
        android:layout_alignEnd="@+id/imageView15"
        android:layout_marginEnd="80dp"
        android:id="@+id/correct_result" />

    <TextView
        android:text="bbbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wrong_text"
        android:layout_alignStart="@+id/correct_result"
        android:id="@+id/wrong_result" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cancelbutton"
        android:background="@null"
        android:id="@+id/cancel_button"
        android:layout_alignTop="@+id/continue_button"
        android:layout_alignEnd="@+id/imageView15"
        android:layout_marginEnd="37dp" />

    <TextView
        android:text="aaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreSucResult"
        android:layout_alignBottom="@+id/scoreSucText"
        android:layout_alignEnd="@+id/imageView15"
        android:layout_marginEnd="86dp"
        android:layout_alignTop="@+id/scoreSucText" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cont"
        android:background="@null"
        android:id="@+id/continue_button"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_alignStart="@+id/scoreSucText"
        android:layout_marginBottom="34dp" />

    <TextView
        android:text="SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreSucText"
        android:layout_above="@+id/continue_button"
        android:layout_alignStart="@+id/wrong_text"
        android:layout_marginBottom="18dp" />

    <TextView
        android:text="WRONG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrong_text"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/scoreSucText"
        android:layout_alignStart="@+id/correct_text" />

    <TextView
        android:text="CORRECT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:id="@+id/correct_text"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/wrong_text"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/level_completed4"
        android:id="@+id/imageView16"
        android:layout_above="@+id/correct_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />


</RelativeLayout>
